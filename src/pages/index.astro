  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Gain Valuable Insights into Common Queries About Our Services, Technologies, and Processes. Get Quick and Comprehensive Answers to Your Questions."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
