  <!-- Features2 Widget ************** -->

  <Features2
    title="Mostly Recommended Approaches to Start Your MVP"
    subtitle="Provides a simple approach to quickly start developing your business idea"
    tagline="Recommendeds"
    items={[
      {
        title: 'React.js',
        description:
          'A widely used JavaScript framework for building interactive and responsive user interfaces in the frontend.',
