---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
//import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
// import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
// import Stats from '~/components/widgets/Stats.astro';
//import CallToAction from '~/components/widgets/CallToAction.astro';
import { SITE } from '~/utils/config';

const metadata = {
  title: `${SITE?.name}: Pioneering the Future of Technology and AI`,
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[{ variant: 'primary', text: 'Learn more', href: '#features' }]}
    image={{ src: '~/assets/images/tree-2987962_1280.jpg', alt: 'Understanding the product development cycle.' }}
  >
    <Fragment slot="title">Create the future, breathe life into your business, and thrive.</Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Explore Technology and AI through the Vision of {SITE?.name}, a Forward-Thinking Software Developer on a Mission
        for Intelligent Solutions.
      </span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What can you achieve with us?"
    subtitle="One of the most professional and comprehensive templates currently on the market. Most starred & forked Astro theme in 2022."
    items={[
      {
        title: 'Custom Web Application Development',
        description:
          'Create unique web applications tailored to your needs, using the latest web technologies for efficiency and innovation.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Mobile App Development',
        description:
          'Craft mobile apps for Android and iOS, integrating them seamlessly with web systems and databases.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Data Analysis and Visualization',
        description:
          'Understand and leverage your data with data analysis, predictive modeling, and visualizations for informed decision-making.',
        icon: 'tabler:components',
      },
      {
        title: 'Dashboard Design',
        description: 'Monitor key data in real-time with interactive dashboards, showcasing KPIs and business metrics.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Bot Integration',
        description:
          'Enhance user experiences and automate processes with the seamless integration of chatbots and AI-driven bots into your digital platforms.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Data Science Consulting',
        description:
          'Help businesses effectively use data through expert consulting and provide training for internal teams.',
        icon: 'tabler:arrows-right-left',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Insides"
    title="Our creations: Coding magic for a digital kingdom."
    items={[
      {
        title: 'Robust and Secure Code',
        description:
          "We develop code that's not just functional, but also secure, providing peace of mind for both you and your users.",
      },
      {
        title: 'Scalable Architectures',
        description:
          "Our solutions are built with scalability in mind, ensuring they can grow alongside your business's needs.",
      },
      {
        title: 'Rigorous Testing Frameworks',
        description:
          'We employ comprehensive testing methodologies to deliver code that is reliable and robust under all conditions.',
      },
    ]}
    image={{
      src: '~/assets/images/programmer-1653351_1280.png',
      alt: '"Skilled programmer writing code on a computer.',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Building on modern foundations</h3>
       Gain a competitive advantage by incorporating industry leading practices
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Future-Proofed Development',
        description:
          'Our code is designed to adapt and thrive in the face of ever-evolving technology trends and requirements.',
      },
      {
        title: 'Efficient Code Optimization',
        description: 'We fine-tune our code for performance, so your applications run at peak efficiency.',
      },
      {
        title: 'Fully responsive design',
        description:
          "Ensure your website's optimal performance on various devices and screen sizes, providing a consistent and enjoyable user experience.",
      },
      {
        title: 'Responsive Support',
        description: 'Count on us for quick and effective support whenever you encounter issues or need assistance.',
      },
    ]}
    image={{
      src: '~/assets/images/connections-2099068_1280.jpg',
      alt: 'Diverse group of individuals engaging in social connections and interactions.',
    }}
  >
    <Fragment slot="content">Ensure your online presence truly represents you.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Boosted User Engagement',
        description:
          'Engage your audience with interactive elements, user-friendly navigation, and visually captivating layouts to keep them coming back.',
      },
      {
        title: 'Continuous improvement',
        description:
          'Ensure your website stays aligned with the latest trends and technologies through regular updates and enhancements.',
      },
      {
        title: 'Flexible Team Expansion',
        description: 'As your project grows, we have the expertise to quickly onboard new team members when needed.',
      },
      {
        title: 'Inclusive Collaboration',
        description: `We foster a collaborative environment, ensuring your input is valued every step of the way.`,
      },
    ]}
    image={{
      src: '~/assets/images/money-6063323_1280.jpg',
      alt: 'Observing the financial results of hard work and dedication.',
    }}
  >
    <Fragment slot="content">Designed to foster growth and success.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

